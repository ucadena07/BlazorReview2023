@page "/"
@using BlazorWasmReview.GeneralUI.BusyOverlay
@inject NavigationManager _nav
@inject InProgressOverlayService _inProgressService

<h1>Hello, world!</h1>
<button class="btn btn-success" @onclick="@(() => _nav.NavigateTo("/signin"))">sign in</button>
<button class="btn btn-success" @onclick="@(() => _nav.NavigateTo("/items"))">items</button>

@code{
    protected override async Task OnInitializedAsync()
    {
        _inProgressService.SetBusyState(BusyEnum.Busy);
        await Task.Delay(5000);
        _inProgressService.SetBusyState(BusyEnum.NotBusy);
    }
}
